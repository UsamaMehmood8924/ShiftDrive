<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:layout_marginLeft="0dp"
    android:id="@+id/cardviewDamageResult"
    android:layout_marginRight="0dp"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:id="@+id/resultVisibility"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="@dimen/usernameMargin">

        <TextView
            android:id="@+id/DamageResultheader"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="Result"
            android:textSize="15dp"/>
        <!--
               <TextView
                   android:layout_marginTop="10dp"
                   android:id="@+id/recognizeResultcar"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:textColor="@color/colorAccent"
                   android:text=""
                   android:textSize="20dp"/>
               -->
        <TextView
            android:id="@+id/damageresultreport"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/primaryTextColor"
            android:text="Detecting..."
            android:textSize="16dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
